{
  "private": true,
  "scripts": {
    "dev:server-with-project": "nodemon --watch packages/$PACKAGE/src --ext ts,tsx --exec \"ts-node --project $TSCONFIG --require tsconfig-paths/register packages/$PACKAGE/src/index.ts\"",
    "dev:server": "if-env TSCONFIG=default && TSCONFIG=tsconfig.json npm run dev:server-with-project || npm run dev:server-with-project",
    "dev:backup": "PACKAGE=backup TSCONFIG=packages/backup/tsconfig.json npm run dev:server",
    "dev:symbols": "PACKAGE=symbols TSCONFIG=default npm run dev:server"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "if-env": "^1.0.4",
    "jest": "^23.1.0",
    "lerna": "^2.11.0",
    "nodemon": "^1.18.1",
    "ts-jest": "^22.4.6",
    "ts-node": "^7.0.0",
    "tsconfig-paths": "^3.3.2",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  }
}
